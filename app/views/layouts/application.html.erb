<!DOCTYPE html>
<html>
<head>
  <title>AptAlertNyc</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="bg-img"></div>
  <div class="page-wrapper">
    <header>
      <div id="title-wrapper">
        <div class="title-bigborder">
          <h1><%= link_to "APT Alerts NYC", root_path%></h1>
          <!-- <div class="title-blackbox">
            <h2> </h2>
          </div> -->
        </div>
      </div>
      <div class="login">
        <% if logged_in? %>
            <p><%= link_to("#{current_user.first_name}'s Profile", user_path(current_user)) %></p><br>
            <p><%= link_to("Logout", "/session", method: "delete") %></p>
          <% else %>
            <p><%= link_to("Please Login!","/login") %></p><br>
            <p><%= link_to("Register Here", new_user_path) %></p>
          <% end %>
        </div>
    </header>

    <div class="content-wrapper">
      <%= yield %>
    </div>

    <footer></footer>
  </div>

</body>
</html>
